{
    "openapi": "3.0.0",
    "info": {
        "title": "URL Shortener API",
        "version": "1.0.0",
        "description": "API for creating short URLs, redirecting, and retrieving usage reports."
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/shorten": {
            "post": {
                "summary": "Create a short URL",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ShortenRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Short URL created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ShortenResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                }
            }
        },
        "/{code}": {
            "get": {
                "summary": "Redirect to original URL",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Short code generated by the service"
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirect to original URL"
                    },
                    "404": {
                        "description": "Short code not found"
                    }
                }
            }
        },
        "/{code}/report": {
            "get": {
                "summary": "Get usage report for a short URL",
                "parameters": [
                    {
                        "name": "code",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Report data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReportResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Short code not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ShortenRequest": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://google.com"
                    }
                },
                "required": [
                    "url"
                ]
            },
            "ShortenResponse": {
                "type": "object",
                "properties": {
                    "shortUrl": {
                        "type": "string",
                        "example": "http://localhost:3000/abc123"
                    }
                }
            },
            "ReportResponse": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string"
                    },
                    "clicks": {
                        "type": "integer"
                    },
                    "used": {
                        "type": "boolean"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}